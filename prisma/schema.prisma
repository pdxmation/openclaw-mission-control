generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Better Auth Tables
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  avatar        String?   // Avatar URL for Kanban display
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  sessions      Session[]
  accounts      Account[]
  assignedTasks Task[]    @relation("TaskAssignee")
  activityLogs  ActivityLog[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

// ============================================
// Mission Control Tables
// ============================================

enum TaskStatus {
  RECURRING
  IN_PROGRESS
  BACKLOG
  REVIEW
  COMPLETED
  BLOCKED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#6366f1") // Default indigo color
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  tasks       Task[]

  @@map("project")
}

model Label {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#10b981") // Default emerald color
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  tasks     TaskLabel[]

  @@map("label")
}

model TaskLabel {
  id        String   @id @default(cuid())
  taskId    String
  labelId   String
  createdAt DateTime @default(now())
  
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  label     Label    @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@unique([taskId, labelId])
  @@map("task_label")
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?    // Task description for Kanban card
  status      TaskStatus @default(BACKLOG)
  priority    Priority   @default(MEDIUM)
  isRecurring Boolean    @default(false) // For recurring tasks
  position    Int        @default(0) // For ordering within columns
  
  // Relations
  assigneeId  String?
  assignee    User?      @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  projectId   String?
  project     Project?   @relation(fields: [projectId], references: [id], onDelete: SetNull)
  labels      TaskLabel[]
  subtasks    Subtask[]
  
  // Status-specific fields
  startedAt   DateTime?
  statusNote  String?     // e.g., "Blocked", "Queued", "In Review"
  
  // Completion tracking
  completedAt DateTime?
  outcome     String?
  
  // Blocker tracking
  blocker     String?
  need        String?
  
  // General notes
  notes       String?
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  activityLogs ActivityLog[]
  
  @@index([status])
  @@index([priority])
  @@index([assigneeId])
  @@index([projectId])
  @@map("task")
}

model Subtask {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  position  Int      @default(0)
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([taskId])
  @@map("subtask")
}

model ActivityLog {
  id        String   @id @default(cuid())
  action    String   // created, moved, completed, deleted, updated
  details   String?  // JSON string with details like {from: "BACKLOG", to: "IN_PROGRESS"}
  
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)
  
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  createdAt DateTime @default(now())

  @@index([taskId])
  @@index([userId])
  @@index([createdAt])
  @@map("activity_log")
}

// ============================================
// Second Brain / Documents
// ============================================

model Document {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  type      String   @default("note")  // journal, note, concept, research
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
  @@index([createdAt])
  @@map("document")
}
