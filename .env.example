# ===========================================
# Mission Control - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Generate tokens: openssl rand -hex 32

# -----------------
# Database
# -----------------
# PostgreSQL connection string
# For vector search, ensure pgvector extension is enabled
DATABASE_URL="postgresql://user:password@localhost:5432/mission_control?schema=public"

# -----------------
# API Security
# -----------------
# Bearer token for API authentication (Tasks & Documents API)
# Generate: openssl rand -hex 32
API_TOKEN="your-secure-random-token-here"

# -----------------
# Authentication (Better Auth)
# -----------------
# Secret for session encryption
# Generate: openssl rand -base64 32
BETTER_AUTH_SECRET="generate-with-openssl-rand-base64-32"

# Base URL of your application
BETTER_AUTH_URL="http://localhost:3000"

# Set to "true" to bypass auth for local development
# BYPASS_AUTH=true

# -----------------
# Email (Resend)
# -----------------
# For auth emails (magic links, password reset)
# Get your API key at https://resend.com
RESEND_API_KEY=""
RESEND_FROM_EMAIL="noreply@yourdomain.com"
RESEND_ADMIN_EMAIL="admin@yourdomain.com"

# -----------------
# AI / Embeddings (Optional)
# -----------------
# For semantic search with vector embeddings
# Get your API key at https://platform.openai.com
OPENAI_API_KEY=""
