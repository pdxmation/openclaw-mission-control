# ===========================================
# Mission Control - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Generate tokens: openssl rand -hex 32

# -----------------
# Database
# -----------------
# PostgreSQL connection string
# For vector search, ensure pgvector extension is enabled
DATABASE_URL="postgresql://user:password@localhost:5432/mission_control?schema=public"

# -----------------
# Application
# -----------------
# Public URL of your application (used for emails, redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Admin email - this user gets automatic admin rights
ADMIN_EMAIL="admin@yourdomain.com"

# -----------------
# API Security
# -----------------
# Legacy bearer token for API authentication
# Generate: openssl rand -hex 32
# NOTE: Users can also create personal API keys in Settings > API Keys
API_TOKEN="your-secure-random-token-here"

# -----------------
# Authentication (Better Auth)
# -----------------
# Secret for session encryption
# Generate: openssl rand -base64 32
BETTER_AUTH_SECRET="generate-with-openssl-rand-base64-32"

# Base URL of your application
BETTER_AUTH_URL="http://localhost:3000"

# -----------------
# Email (Resend)
# -----------------
# For auth emails (OTP codes, approval notifications)
# Get your API key at https://resend.com
RESEND_API_KEY=""
RESEND_FROM_EMAIL="Mission Control <noreply@yourdomain.com>"

# -----------------
# Stripe (Subscription Billing)
# -----------------
# Get your keys at https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Webhook secret for verifying Stripe events
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_..."

# Price IDs for subscription tiers
# Early Adopter pricing (first 200 users)
STRIPE_PRICE_ID_EARLY_MONTHLY="price_..."   # $9/mo
STRIPE_PRICE_ID_EARLY_YEARLY="price_..."    # $86/yr (20% off)

# Regular pricing (after 200 users)
STRIPE_PRICE_ID_MONTHLY="price_..."         # $19/mo
STRIPE_PRICE_ID_YEARLY="price_..."          # $182/yr (20% off)

# -----------------
# AI / Embeddings (Optional)
# -----------------
# For semantic search with vector embeddings
# Get your API key at https://platform.openai.com
OPENAI_API_KEY=""
